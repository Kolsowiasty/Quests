function aWordFinder(firstArray: string[], secondArray: string): string[] 
{
  const Array: string[] = firstArray.filter(array => array.includes(secondArray));
  return Array;
}

const inArray: string[] = ["dwa", "akot2", "kot3"];
const Word: string = "kot";
const Result: string[] = aWordFinder(inArray, Word);

console.log(Result);
